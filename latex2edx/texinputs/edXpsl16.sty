\providecommand\phantomsection{}

%Set table of contents
\def\addchaptoc#1{\phantomsection\addcontentsline{toc}{chapter}{#1}}
\def\addsectoc#1{\phantomsection\addcontentsline{toc}{section}{#1}}
\def\addsubtoc#1{\phantomsection\addcontentsline{toc}{subsection}{#1}}

% =================================================
% edX commands understood by latex2edx
\NewDocumentEnvironment{edXcourse}{m m o}{{\title{{\Huge \bf #2}\\ \vspace{1em}{\Huge edX Course: #1}\\ \vspace{1em} \IfNoValueTF{#3}{}{\texttt{#3}}}}\maketitle \tableofcontents \newpage}{}
\NewDocumentEnvironment{edXchapter}{m o}{\chapter{#1}}{}
\NewDocumentEnvironment{edXchapter*}{m o}{\chapter*{#1}\addchaptoc{#1}}{}
%---
\newcommand{\sectionname}{}
\newcommand{\subsectionname}{}
\NewDocumentEnvironment{edXsequential}{m o}{\section{\color{red} #1} \renewcommand{\sectionname}{#1}}{\clearpage}
\NewDocumentEnvironment{edXsequential*}{m o}{\section*{\color{red} #1} \renewcommand{\sectionname}{#1}\addsectoc{#1}}{\clearpage}
\NewDocumentEnvironment{edXvertical}{m o}{\subsection{\color{red} \bf In Section: \thesection\ \sectionname\\ edXvertical: #1} \renewcommand{\subsectionname}{#1} \setboolean{inVertical}{true}\addsubtoc{edXvertical: #1}}{\setboolean{inVertical}{false}}
\NewDocumentEnvironment{edXvertical*}{m o}{\subsection*{\color{red} \bf In Section: \thesection\ \sectionname\\ edXvertical: #1} \renewcommand{\subsectionname}{#1} \setboolean{inVertical}{true}\addsubtoc{edXvertical: #1}}{\setboolean{inVertical}{false}}
\NewDocumentEnvironment{edXshowhide}{m m o}{\begin{quote}{{\bf Showhide: #2 (ID: #1):}}}{\end{quote}}
\NewDocumentEnvironment{edXproblem}{m g}{\subsection*{\color{red} In \ifthenelse{\boolean{inVertical}}{Vertical}{Section\addsubtoc{edXproblem: #1}}: \thesection\ \sectionname\\ edXproblem: #1\IfNoValueTF{#2}{}{\IfInteger{#2}{: #2 Points}{}}}}{}
\NewDocumentEnvironment{edXtext}{m o}{\subsection*{\color{red} In \ifthenelse{\boolean{inVertical}}{Vertical}{Section\addsubtoc{edXtext: #1}}: \thesection\ \sectionname\\ edXtext: #1}}{}
%---
\newenvironment{edXscript}{\noindent \underline{\texttt{Python code:}} \verbatim}{\endverbatim}
\newenvironment{edXanswer}{\verbatim}{\endverbatim}
\newenvironment{edXjavascript}{\verbatim}{\endverbatim}
\newenvironment{edXmath}{$$}{$$}
\newcommand\edXinline[1]{#1}
\newcommand\edXinclude[1]{\texttt{#1}}
\newcommand\edXincludepy[1]{}
\newcommand\edXxml[1]{\lstset{language=XML}\lstinline^#1^}
\newcommand\edXbr[1]{\par}
\NewDocumentCommand{\edXvideo}{m m o}{\href{http://www.youtube.com/watch?v=#2}{\color{blue} \underline{#1}}} %\edXvideo{Description}{youtube_id}[source=""]
\def\edXinlinevideo#1{\edXvideo{at this YouTube link}{#1}} %Wrapper for Chad's code
\newcommand\edXdiscussion[2]{{\bf Discussion: }#1}{} %\edXdiscussion{Display Name}{discussion_category="", overwrite: discussion_id="" discussion_target=""}
\NewEnviron{edXsolution}{\ifthenelse{\boolean{showSolution}}{\color{blue} \noindent \underline{edXsolution} \BODY}{}}
\newcommand\edXabox[1]{\ifthenelse{\boolean{showAboxCode}}{\fbox{\parbox{0.9\hsize}{\urlstyle{tt} \vurl{#1}}}}{{\color{blue} \bf Assessment content removed}}}
% CrossRef addition (for Measurable Outcomes and the like)
\setlength\fboxsep{0pt}
\newcommand{\tocref}[1]{\ {\color{cyan} \colorbox{gray!20}{\framebox(28,14){\ref{#1}}}}}
\newcommand{\toclabel}[1]{\label{#1}}
% =================================================
\renewcommand\texttt[1]{\urlstyle{tt} \vurl{#1}}

% Initialize toggling parameters for PDF output
\newboolean{inVertical}
\setboolean{inVertical}{false}
\newboolean{showAboxCode}
\setboolean{showAboxCode}{false}
\newboolean{showSolution}
\setboolean{showSolution}{false}

% Constrain allowed graphics
\DeclareGraphicsExtensions{.png,.pdf,.jpg}

